#include <iostream>
#include <string>
using namespace std;

//Custom Data Typeee
struct Song {
    string title;
    string artist;
    string duration;
};

//Initial Values
const int MAX_SIZE = 20;
Song playlist[MAX_SIZE] = {
{"Mundo", "Cup of Joe", "4:25"},
{"Upuan", "Gloc-9", "5:10"},
{"Leonora", "Sugarcane", "4:05"},
{"Burnout", "Sugarfree", "4:15"},
{"Same Ground", "Kitchie Nadal", "4:00"}
};

int song_count = 5;
int current_track = 0;

//Display Playlist (Traversal Algo)
void display_playlist() {
    cout << "\n--- Current Playlist (" << song_count << " songs) ---\n";
    for (int i = 0; i < song_count; i++) {
        cout << i + 1 << ". " << playlist[i].title
             << " | " << playlist[i].artist
             << " | " << playlist[i].duration << endl;
    }
}

//Search Song (Search Algo)
int search_song(const string& title) {
    for (int i = 0; i < song_count; i++) {
        if (playlist[i].title == title) return i;
    }
    return -1;
}

//Delete Song (Deletion Algo)
void handle_delete_song() {
    if (song_count == 0) {
        cout << "\nPlaylist is empty.\n";
        return;
    }

    string title;
    cout << "\n--- Delete Song ---\n";
    cout << "Enter exact title: ";
    getline(cin, title);
    //Call Search Song
    int index = search_song(title);
    if (index == -1) {
        cout << "\nSong not found.\n";
        return;
    }
    //Shift to the left
    for (int i = index; i < song_count - 1; i++)
        playlist[i] = playlist[i + 1];
    //Delete Last Index
    song_count--;
    if (current_track >= song_count && song_count > 0)
        current_track = song_count - 1;

    cout << "\nSong deleted.\n";
}

//Select Song (Search Algo)
void handle_select_song() {
    string title;
    cout << "\n--- Search Song ---\n";
    cout << "Enter exact title: ";
    getline(cin, title);

    int index = search_song(title);
    if (index == -1) {
        cout << "\nSong not found.\n";
        return;
    }

    current_track = index;
    cout << "\nNow Selected:\n";
    cout << playlist[index].title << " | "
         << playlist[index].artist << " | "
         << playlist[index].duration << endl;
}

//Add Song (No Insertion Algo - Adds only at the End)
void handle_add_song() {
    if (song_count >= MAX_SIZE){
        cout << "\nPlaylist is full. Cannot add more songs.\n";
        return;
    }
    string title, artist, duration;
    
    cout << "\n--- Add New Song --- \n";
    cout << "Enter Title: ";
    getline(cin, title);
    cout << "Enter Artist: ";
    getline(cin, artist);
    cout << "Enter Duration (e.g.: 3:45):";
    getline(cin, duration);
    
    playlist[song_count] = {title, artist, duration};
    song_count++;
    
    cout << "\n[SUCCESS] '" << title << "' added to playlist. \n";
}

//INTERFACE
void main_menu() {
    string choice;

    do {
        cout << "\n           Basic OPM Playlist Manager        \n";
        cout << "                (Maximum 20 Songs)           \n"
        cout << "=============================================\n";
        if (song_count > 0) {
            cout << "Now Playing: "
                 << playlist[current_track].title
                 << " by " << playlist[current_track].artist
                 << " (" << playlist[current_track].duration << ")\n";
        } else {
            cout << "Playlist is empty.\n";
        }
        cout << "=============================================\n";
        cout << "1. Next Song\n2. Previous Song\n3. Select Song\n";
        cout << "4. Show Playlist\n5. Add Song\n6. Delete Song\n7. Exit\n";
        cout << "Enter choice: ";

        getline(cin, choice);

        int c;
        try {
            c = stoi(choice);
        } catch (...) {
            cout << "\nInvalid input. Please enter a number only.\n";
            continue;
        }

        switch (c) {
            case 1:
                if (song_count > 0)
                    current_track = (current_track + 1) % song_count;
                break;
            case 2:
                if (song_count > 0)
                    current_track = (current_track - 1 + song_count) % song_count;
                break;
            case 3:
                handle_select_song();
                break;
            case 4:
                display_playlist();
                break;
            case 5:
                handle_add_song();
                break;
            case 6:
                handle_delete_song();
                break;
            case 7:
                cout << "\nGoodbye!\n";
                return;
            default:
                cout << "\nInvalid choice.\n";
        }
    } while (true);
}

//ACTUAL MAIN
int main() {
    main_menu();
    return 0;
}
